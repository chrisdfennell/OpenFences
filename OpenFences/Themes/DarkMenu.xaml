<!-- Themes/DarkMenu.xaml -->
<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ===== Colors ===== -->
    <SolidColorBrush x:Key="DarkMenu.Background" Color="#151821"/>
    <SolidColorBrush x:Key="DarkMenu.Border"     Color="#242938"/>
    <SolidColorBrush x:Key="DarkMenu.Foreground" Color="#FFFFFFFF"/>
    <SolidColorBrush x:Key="DarkMenu.Subtle"     Color="#A8AEBD"/>

    <SolidColorBrush x:Key="DarkMenu.ItemHover"  Color="#232A39"/>
    <SolidColorBrush x:Key="DarkMenu.ItemPress"  Color="#2D3547"/>
    <SolidColorBrush x:Key="DarkMenu.Accent"     Color="#3B82F6"/>

    <SolidColorBrush x:Key="DarkMenu.Separator"  Color="#30384A"/>

    <!-- ===== Menu (top bar) ===== -->
    <Style TargetType="Menu">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Foreground" Value="{StaticResource DarkMenu.Foreground}"/>
        <Setter Property="Background" Value="#11141B"/>
        <Setter Property="BorderThickness" Value="0,0,0,1"/>
        <Setter Property="BorderBrush" Value="{StaticResource DarkMenu.Border}"/>
        <Setter Property="Padding" Value="4,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Menu">
                    <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}">
                        <ItemsPresenter Margin="2,0,2,0"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== ContextMenu (dropdown panel root) ===== -->
    <Style TargetType="ContextMenu">
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="OverridesDefaultStyle" Value="True"/>
        <Setter Property="Foreground" Value="{StaticResource DarkMenu.Foreground}"/>
        <Setter Property="Background" Value="{StaticResource DarkMenu.Background}"/>
        <Setter Property="BorderBrush" Value="{StaticResource DarkMenu.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ContextMenu">
                    <Border Background="{TemplateBinding Background}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  CornerRadius="10"
                  SnapsToDevicePixels="True">
                        <StackPanel IsItemsHost="True"
                        KeyboardNavigation.DirectionalNavigation="Cycle"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== MenuItem (top-level & submenu) ===== -->
    <Style TargetType="MenuItem">
        <Setter Property="Foreground" Value="{StaticResource DarkMenu.Foreground}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="BorderBrush" Value="Transparent"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="MenuItem">
                    <Grid SnapsToDevicePixels="True">
                        <!-- Hover/press bg -->
                        <Border x:Name="Bg"
                    Background="{TemplateBinding Background}"
                    CornerRadius="8"
                    Margin="2"/>

                        <!-- Layout for icon + header + gesture -->
                        <Grid Margin="6,2" x:Name="LayoutRoot">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <ContentPresenter x:Name="Icon"
                                Grid.Column="0"
                                ContentSource="Icon"
                                Margin="0,0,8,0"
                                VerticalAlignment="Center"/>

                            <ContentPresenter Grid.Column="1"
                                x:Name="HeaderHost"
                                ContentSource="Header"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True"/>

                            <TextBlock Grid.Column="2"
                         Margin="12,0,6,0"
                         VerticalAlignment="Center"
                         Foreground="{StaticResource DarkMenu.Subtle}"
                         Text="{TemplateBinding InputGestureText}"/>
                        </Grid>

                        <!-- Right arrow when this item has children -->
                        <Path x:Name="Arrow"
                  Grid.Column="2"
                  Margin="8,0,8,0"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Center"
                  Width="8" Height="8"
                  Fill="{StaticResource DarkMenu.Subtle}"
                  Data="M 0 0 L 8 4 L 0 8 Z"
                  Visibility="Collapsed"/>

                        <!-- *** Submenu Popup (required for menus to open) *** -->
                        <Popup x:Name="SubmenuPopup"
                   Placement="Bottom"
                   AllowsTransparency="True"
                   Focusable="False"
                   StaysOpen="False"
                   PopupAnimation="Fade"
                   IsOpen="{Binding IsSubmenuOpen, RelativeSource={RelativeSource TemplatedParent}}">
                            <Border Background="{StaticResource DarkMenu.Background}"
                      BorderBrush="{StaticResource DarkMenu.Border}"
                      BorderThickness="1"
                      CornerRadius="10"
                      Padding="6">
                                <ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto">
                                    <StackPanel IsItemsHost="True"
                              KeyboardNavigation.DirectionalNavigation="Cycle"/>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <!-- Hover / Press -->
                        <Trigger Property="IsHighlighted" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="{StaticResource DarkMenu.ItemHover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="Bg" Property="Background" Value="{StaticResource DarkMenu.ItemPress}"/>
                        </Trigger>

                        <!-- Top bar header spacing -->
                        <Trigger Property="Role" Value="TopLevelHeader">
                            <Setter Property="Padding" Value="14,10"/>
                            <Setter TargetName="SubmenuPopup" Property="Placement" Value="Bottom"/>
                        </Trigger>

                        <!-- Submenu header shows arrow and opens to the right -->
                        <Trigger Property="Role" Value="SubmenuHeader">
                            <Setter TargetName="Arrow" Property="Visibility" Value="Visible"/>
                            <Setter TargetName="SubmenuPopup" Property="Placement" Value="Right"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55"/>
                        </Trigger>

                        <Trigger Property="IsSubmenuOpen" Value="True">
                            <Setter Property="Background" Value="{StaticResource DarkMenu.ItemHover}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>

        <!-- Apply same style to children -->
        <Setter Property="ItemContainerStyle">
            <Setter.Value>
                <Style TargetType="MenuItem" BasedOn="{StaticResource {x:Type MenuItem}}"/>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== Separator ===== -->
    <Style TargetType="Separator">
        <Setter Property="Margin" Value="10,6"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Border Height="1" Background="{StaticResource DarkMenu.Separator}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== CheckBox (for controls embedded inside menus) ===== -->
    <Style TargetType="CheckBox">
        <Setter Property="Foreground" Value="{StaticResource DarkMenu.Foreground}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Padding" Value="4,2"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal" SnapsToDevicePixels="True">
                        <Border x:Name="Box"
                    Width="14" Height="14"
                    CornerRadius="3"
                    BorderThickness="1"
                    Margin="0,0,8,0"
                    BorderBrush="#556079"
                    Background="#1E2430"/>
                        <ContentPresenter VerticalAlignment="Center"
                              RecognizesAccessKey="True"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource DarkMenu.Accent}"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Box" Property="Background" Value="{StaticResource DarkMenu.Accent}"/>
                            <Setter TargetName="Box" Property="BorderBrush" Value="{StaticResource DarkMenu.Accent}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ===== ScrollBar + Thumb (dark) ===== -->
    <Style TargetType="Thumb" x:Key="DarkThumb">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Border Width="{TemplateBinding Width}"
                  Height="{TemplateBinding Height}"
                  Background="#30394B"
                  BorderBrush="#3B4458"
                  BorderThickness="1"
                  CornerRadius="3"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="ScrollBar">
        <Setter Property="Width" Value="6"/>
        <Setter Property="Background" Value="#10141C"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ScrollBar">
                    <Grid Background="{TemplateBinding Background}">
                        <Track x:Name="PART_Track">
                            <Track.DecreaseRepeatButton>
                                <RepeatButton IsEnabled="False" Opacity="0"/>
                            </Track.DecreaseRepeatButton>
                            <Track.IncreaseRepeatButton>
                                <RepeatButton IsEnabled="False" Opacity="0"/>
                            </Track.IncreaseRepeatButton>
                            <Track.Thumb>
                                <Thumb Height="24" Width="6" Style="{StaticResource DarkThumb}"/>
                            </Track.Thumb>
                        </Track>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>